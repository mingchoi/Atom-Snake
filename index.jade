!!!5
html
  head
    title Atom Snake
    meta(content='text/html; charset=UTF-8', http-equiv='Content-Type')
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
    script(src='http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js')
    link(href='http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.min.css', rel='stylesheet')
    script(src='AtomSnake.js')
    style
      * {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
      }
      body {
        font-size: 0;
        line-height: 0;
        background: #2BA;
      }
      #wrapper {
        text-align: center;
      }
      #title {
        font-size: 100px;
        line-height: 100px;
        color: #FFF;
        text-shadow: 1px 1px 0 #F60, 2px 2px 0 #E60, 3px 3px 0 #D60, 4px 4px 0 #C60, 5px 5px 0 #B60;
      }
      #atom-Snake-Game {
        display: inline-block;
        padding: 20px;
        background: #DDD;
        border-radius: 25px;
      }
      .snake-Led {
        display: inline-block;
        background: #030;
        width: 50px;
        height: 50px;
        content: "";
        border-radius: 50px;
      }
      .snake-Led-On {
        background: #0D0;
      }
      .snake-button {
        position: relative;
        background: -moz-linear-gradient(top, #ffffff 0%,	#d1d1d1);
        background: -webkit-gradient(linear, left top, left bottom, from(#ffffff), to(#d1d1d1));
        border: 1px solid #b0aeae;
        cursor: pointer;
      }
      .snake-button:active {
        background: #BBB;
      }
      .sbTop, .sbBottom {
        display: block;
        width: 100px;
        height: 50px;
      }
      .sbLeft, .sbRight {
        display: inline-block;
        width: 50px;
        height: 110px;
      }
      .sbLeft:after {
        position: absolute;
        top: 35px;
        left: 8px;
        width: 0;
        height: 0;
        content: " ";
        border-style: solid;
        border-width: 15px 30px 15px 0;
        border-color: transparent #333 transparent transparent;
      }
       .sbRight:after {
        position: absolute;
        top: 35px;
        left: 12px;
        width: 0;
        height: 0;
        content: " ";
        border-style: solid;
        border-width: 15px 0 15px 30px;
        border-color: transparent transparent transparent #333;
      }
      .sbTop:after {
        position: absolute;
        top: 8px;
        left: 35px;
        width: 0;
        height: 0;
        content: " ";
        border-style: solid;
        border-width: 0 15px 30px 15px;
        border-color: transparent transparent #333 transparent;
      }
       .sbBottom:after {
        position: absolute;
        top: 12px;
        left: 35px;
        width: 0;
        height: 0;
        content: " ";
        border-style: solid;
        border-width: 30px 15px 0 15px;
        border-color: #333 transparent transparent transparent;
      }
  body
    #wrapper
      h1#title Atom Snake
      #atom-Snake-Game
      div(style="height: 20px;")
      div.snake-button.sbLeft
      div(style="display: inline-block;width:10px")
      div(style="display: inline-block;width:100px")
        div.snake-button.sbTop
        div(style="height: 10px")
        div.snake-button.sbBottom
      div(style="display: inline-block;width:10px")
      div.snake-button.sbRight
      audio#crawl
        source(src="crawl.wav", type="audio/wav")
      audio#eat
        source(src="eat.wav", type="audio/wav")
      audio#hit
        source(src="hit.wav", type="audio/wav")

